@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperForum</title>

    <environment names="Staging,Production,Development">
        <link rel="stylesheet" href="~/Content/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/Content/css/site.css" asp-append-version="true" />
    </environment>
    <link rel="apple-touch-icon" sizes="180x180" href="/Content/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/Content/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/Content/images/favicon-16x16.png">

    <link rel="manifest" href="/manifest.json" />
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
    <a href="/"><img src="~/Content/images/android-chrome-192x192.png" alt="SuperForum" /></a>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - SuperForum</p>
        </footer>
    </div>

    <environment names="Development,Staging,Production">
        <script src="~/Content/lib/jquery/dist/jquery.min.js">
        </script>
        <script src="~/Content/lib/bootstrap/dist/js/bootstrap.min.js">
        </script>
        <script src="~/Content/js/site.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
